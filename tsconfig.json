{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "lib",
    "declarationDir": "types",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["dom", "es2017"],
    "declaration": true
  },
  "include": ["src/**/*.ts"]
}
